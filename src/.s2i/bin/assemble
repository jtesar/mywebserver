#!/bin/bash -e
#
# S2I assemble script for the 'mywebserver' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'mywebserver' assemble script is executed with the '-h' flag, print the usage.

if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts..."
  pushd /tmp/artifacts
  
  if [ "$(ls *.o 2>/dev/null)" ]; then
	  mv *.o /tmp/src
  fi

  for i in *.cc *h; do
    diff $i /tmp/src/$i
    if ! [ "$(diff $i /tmp/src/$i) 2>/dev/null" ]; then 
	mv $i /tmp/src
    fi
  done

  shopt -s dotglob
  mv /tmp/artifacts/* /tmp/src
  shopt -u dotglob
  popd 
fi


echo "---> install  content..."

cp /tmp/src/content/* /var/www/html

echo "---> Building application from source..."
cd /tmp/src
ls -l *
make 
make install
